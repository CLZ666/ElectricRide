<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:gravity="center"
            android:text="请确认还车站点信息"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_marginRight="8dp"
            android:src="@drawable/cancel"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/return_bike_reminder"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/iv_station"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/howjie"/>

    <TextView
        android:id="@+id/tv_station_address"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/return_location_icon"
        android:drawablePadding="8dp"
        android:gravity="left|center"
        android:text="长寿路街道财富时代"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tv_station_desc"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/check_report"
        android:drawablePadding="8dp"
        android:gravity="left|center"
        android:text="不在站点内，尝试跟着我走吧"
        android:textColor="@color/colorRed"
        android:textSize="15sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_follow_me"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@color/red"
            android:drawableLeft="@drawable/step_icon"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="跟我走吧"
            android:textColor="@color/white"
            android:textSize="15sp"
            />

        <Button
            android:id="@+id/btn_confim_return"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@color/red"
            android:drawableLeft="@drawable/warnning"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="确认还车"
            android:textColor="@color/white"
            android:textSize="15sp"
            />
    </LinearLayout>
</LinearLayout>