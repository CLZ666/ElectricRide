<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ebike_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/input_bgd"
    android:orientation="vertical"
    tools:context="com.wanle.lequan.sharedbicycle.activity.EBikeStatusActivity">

    <include layout="@layout/layout_navigation_bar"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/bikeloadding"/>

    <TextView
        android:id="@+id/tv_ebike_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="NO:13876578347"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        >

        <TextView
            android:id="@+id/tv_battery_level"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="80%"
            android:textColor="@color/white"
            android:textSize="15sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white2"/>

        <TextView
            android:id="@+id/tv_mobile_power_level"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="80%"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="车用电量"
            android:textColor="@color/white"
            android:textSize="15sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="内置充电宝(电量)"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unlock_use"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        >
    <TextView
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:text="@string/unlock_use_desc"
        android:maxLines="3"
        android:ellipsize="end"
        android:gravity="center|left"
        android:textSize="13sp"
        android:paddingRight="10dp"
        android:textColor="@color/white2"/>
        <Button
            android:id="@+id/btn_unlock_ebike"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bgd_stroke"
            android:text="开锁用车"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginRight="8dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lease_mobile_power"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:text="@string/unlock_use_desc"
            android:maxLines="3"
            android:ellipsize="end"
            android:gravity="center|left"
            android:textSize="13sp"
            android:paddingRight="10dp"
            android:textColor="@color/white2"
            android:id="@+id/textView3"/>

        <Button
            android:id="@+id/btn_lease_mobile_power"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bgd_stroke"
            android:text="租充电宝"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginRight="8dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/replace_battery"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:id="@+id/textView4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:text="@string/unlock_use_desc"
            android:maxLines="3"
            android:ellipsize="end"
            android:gravity="center|left"
            android:textSize="13sp"
            android:paddingRight="10dp"
            android:textColor="@color/white2"/>

        <Button
            android:id="@+id/btn_replace_battery"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bgd_stroke"
            android:text="更换电池"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginRight="8dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
