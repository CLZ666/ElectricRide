<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.wanle.lequan.sharedbicycle.fragment.ReturnInStationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="6"
            android:gravity="center"
            android:text="请确认还车站点信息"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:src="@drawable/cancel"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/return_bike_reminder"
        android:textSize="18sp"
        />

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </com.amap.api.maps.MapView>

    <TextView
        android:id="@+id/tv_station_address"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/return_location_icon"
        android:drawablePadding="8dp"
        android:gravity="left|center"
        android:text="长寿路街道财富时代"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tv_station_desc"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/check_report"
        android:drawablePadding="8dp"
        android:gravity="left|center"
        android:text="您已在还车站点内可以还车"
        android:textColor="@color/red"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/btn_confim_return"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:background="@color/red"
        android:text="确认还车"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
</LinearLayout>
