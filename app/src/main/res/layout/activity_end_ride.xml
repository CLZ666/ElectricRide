<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_end_ride"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wanle.lequan.sharedbicycle.activity.EndRideActivity">
<include layout="@layout/layout_navigation_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/red"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/tv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:text="您已成功还车"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_ride_cost"
            android:layout_below="@id/tv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:text="支付: ￥ 2"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="钱包余额"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="￥ 21"
            android:gravity="right|center"
            android:layout_marginRight="20dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tougrey"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="骑行时间"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_ride_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="02:23"
            android:gravity="right|center"
            android:layout_marginRight="20dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_trip_detail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="查看行程详情"
        android:gravity="center"
        />
</LinearLayout>
