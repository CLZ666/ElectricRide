<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wanle.lequan.sharedbicycle.activity.UserInfoActivity">

    <com.wanle.lequan.sharedbicycle.view.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/icon_bgd">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"

                    android:src="@drawable/userhead"
                    />
                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:text="小明"
                        android:layout_below="@id/user_icon"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"
                        android:textSize="15sp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_username"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="10dp">

                    <Button
                        android:id="@+id/btn_credit_score"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:background="@color/red"
                        android:gravity="center"
                        android:text="信用积分 105"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/white"/>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="9dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:id="@+id/linear_borrow"
                >

                <TextView
                    android:id="@+id/tv_phone_verification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/complete_verify"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="@color/red"
                    android:layout_marginTop="40dp"
                    android:text="@string/phoneverification"
                    />

                <TextView
                    android:id="@+id/line_depositrecharge"
                    android:layout_width="0dp"
                    android:layout_height="1.4dp"
                    android:layout_weight="1"
                    android:layout_marginTop="40dp"
                    android:background="@color/red"/>

                <TextView
                    android:id="@+id/tv_deposit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:textSize="11sp"
                    android:layout_marginTop="40dp"
                    android:drawableTop="@drawable/dispote_verify"
                    android:gravity="center"
                    android:text="@string/depositrecharge"/>

                <TextView
                    android:id="@+id/line_certification"
                    android:layout_width="0dp"
                    android:layout_marginTop="40dp"
                    android:layout_height="1.4dp"
                    android:layout_weight="1"
                    android:background="@color/grey"/>

                <TextView
                    android:id="@+id/tv_identify"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="40dp"
                    android:drawablePadding="5dp"
                    android:textSize="11sp"
                    android:drawableTop="@drawable/identify_verify"
                    android:gravity="center"
                    android:text="@string/certification"/>

                <TextView
                    android:id="@+id/line_startborrow"
                    android:layout_width="0dp"
                    android:layout_height="1.4dp"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1"
                    android:background="@color/grey"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="40dp"
                    android:drawablePadding="5dp"
                    android:textSize="11sp"
                    android:drawableTop="@drawable/bike_verify"
                    android:gravity="center"
                    android:text="@string/startborrow"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rel_my_account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                >
                <ImageView
                    android:id="@+id/iv_account"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:src="@drawable/usercenter_myaccout"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/my_account"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/iv_account"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_arrow_right_cal"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="￥0.00"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_toLeftOf="@id/iv_arrow"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_my_trip"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <ImageView
                    android:id="@+id/iv_trip"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:src="@drawable/usercenter_myytrip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/my_trip"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/iv_trip"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/iv_arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_arrow_right_cal"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_my_news"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <ImageView
                    android:id="@+id/iv_news"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:src="@drawable/usercenter_mynews"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/my_news"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/iv_news"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/iv_arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_arrow_right_cal"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_my_invite"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <ImageView
                    android:id="@+id/iv_invite"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:src="@drawable/usercenter_invitefriends"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/my_invite"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/iv_invite"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/iv_arrow4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_arrow_right_cal"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_user_guide"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="9dp"
                >
                <ImageView
                    android:id="@+id/iv_guide"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:src="@drawable/usercenter_myques"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/user_guide"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/iv_guide"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/iv_arrow5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_arrow_right_cal"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_my_contact_us"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <ImageView
                    android:id="@+id/iv_contact"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:src="@drawable/usercenter_sysset"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/contact_us"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/iv_contact"
                    />
                <ImageView
                    android:id="@+id/iv_arrow6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_arrow_right_cal"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/white2"/>
        </LinearLayout>
    </com.wanle.lequan.sharedbicycle.view.MyScrollView>

    <RelativeLayout
        android:id="@+id/linear_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:background="@color/toolbar"
        android:layout_alignParentTop="true"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_back"/>

        <TextView
            android:id="@+id/tv_titl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/user_center"
            android:textColor="#fff"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="设置"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:textSize="15sp"/>
    </RelativeLayout>
</RelativeLayout>
