<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/MyDialogStyle"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/inf_win_station"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/returnche"/>
    <TextView
        android:id="@+id/tv_station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hahahhahha"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@id/inf_win_station"
        android:layout_toRightOf="@id/inf_win_station"/>
    <TextView
        android:id="@+id/tv_station_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hahahhahha"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:layout_alignBottom="@id/inf_win_station"
        android:layout_toRightOf="@id/inf_win_station"/>
</RelativeLayout>