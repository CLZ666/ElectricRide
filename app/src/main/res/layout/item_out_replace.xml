<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="4dp"
              android:layout_marginTop="4dp"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_cdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/power_tool"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_battery_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_cdb"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_cdb"
            android:text="编号:124123123214"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/linear_lease_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_battery_no"
            android:layout_below="@id/tv_battery_no"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_cdb"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持有时间:"
                />

            <TextView
                android:id="@+id/tv_lease_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小时"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_lease_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_battery_no"
            android:layout_below="@id/linear_lease_desc"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_cdb"
            android:text="2017-04-23 10:13:10"
            />


        <TextView
            android:id="@+id/yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="(元)"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+5"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/yuan"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="25sp"/>
    </RelativeLayout>
</LinearLayout>